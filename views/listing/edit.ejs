<%- layout("/layouts/boilerPlate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <form  method="POST" action="/listing/<%=listing.id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <h3>Edit Listing</h3>
                <br>
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required>
                    <div class="invalid-feedback">Enter Valid Title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea class="form-control" required name="listing[description]"><%=listing.description%> </textarea>
                    <div class="invalid-feedback">Enter Valid Description</div>
                </div>
                <div class="mb-3">
                    Orignal LIsting Image <br>
                    <img src=" <%=orignalurl %>" alt="Orignal Image" height="140px" width="150px">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-lable">Upload New Image</label>
                    <input type="file" name="listing[image]" class="form-control">   
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price per Night</label>
                        <input type="number" name="listing[price]" value="<%=listing.price%>" class="form-control" required>
                        <div class="invalid-feedback">Enter Valid Price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-lable">Location</label>
                        <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control" required>
                        <div class="invalid-feedback">Enter Valid Country</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="country" class="form-lable">Country</label>
                    <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control" required>
                    <div class="invalid-feedback">Enter Valid Location</div>
                </div>
                <br>
                <button class="btn btn-dark edit-btn">Edit Changes</button>
            </form>
        </div>
    </div>
</body>
